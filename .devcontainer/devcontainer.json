{
    "name": "MCP Vacuum Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "mounts": [
        "source=${localEnv:HOME}/.gnupg,target=/home/developer/.gnupg,type=bind,consistency=cached",
        "source=${localEnv:HOME}/.gitconfig-warp-ai,target=/home/developer/.gitconfig,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "charliermarsh.ruff",
                "matangover.mypy"
            ]
        }
    },
    "postCreateCommand": "sudo chown -R developer:developer /home/developer/.gnupg && chmod 700 /home/developer/.gnupg && chmod 600 /home/developer/.gnupg/* || true && ./.devcontainer/verify-setup.sh",
    "remoteUser": "developer",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "containerEnv": {
        "GPG_TTY": "/dev/pts/0"
    }
}
